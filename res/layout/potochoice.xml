<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TextColor"
    android:orientation="vertical" >
<LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="top|center"
        android:background="@color/qianlvse"
        android:gravity="top|center"
        android:orientation="horizontal" >

         <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp" 
            android:layout_gravity="center">
            <ImageView
            android:id="@+id/potochoice_img"
            style="@style/title_right_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
           
            android:src="@drawable/back_n" />

       <TextView
           android:id="@+id/texttitle"
           android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="选择头像"
                android:textColor="@color/TextColor"
                android:textSize="20sp" />
        <TextView
                android:id="@+id/texttitlebloo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                
                android:gravity="center"
                android:text=""
                android:textColor="@color/TextColor"
                android:textSize="15sp" />
       </RelativeLayout>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
       
        
        
    <Button
        android:id="@+id/btn_poto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
         android:layout_centerInParent="true"
      
        android:text="获取图库图片" />
    <Button
        android:id="@+id/btn_poto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_poto"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
      
        android:text="拍照获取图片" />
    </RelativeLayout>

   

</LinearLayout>
