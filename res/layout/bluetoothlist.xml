<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"  
    android:orientation="vertical" >  

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/background" >

            <ImageView
            android:id="@+id/bls_imageview_gohomebluels"
            style="@style/title_right_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
           
            android:src="@drawable/back_n" />

       <TextView
                android:id="@+id/texttitlemonitor"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="心电检测"
                android:textColor="@color/TextColor"
                android:textSize="20sp" />
        <TextView
                android:id="@+id/texttitlebadd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                 style="@style/title_right_button"
             android:gravity="center"
                android:text="添加"
                android:textColor="@color/TextColor"
                android:textSize="20sp" />
       </RelativeLayout>
  
    <ListView
        android:id="@+id/listView_bluetooth"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/TextColor"
        android:divider="@drawable/line_cross"
        android:dividerHeight="0.5dip" />
  
</LinearLayout>  