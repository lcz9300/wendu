<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TextColor"
    android:orientation="vertical" >

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_gravity="center"
    android:background="@color/qianlvse" >

            <ImageView
            android:id="@+id/band_imageview_gohomeband"
            style="@style/title_right_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
           
            android:src="@drawable/back_n" />

       <TextView
                android:id="@+id/texttitlemonitorband"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="设备类型"
                android:textColor="@color/TextColor"
                android:textSize="20sp" />
        <TextView
                android:id="@+id/texttitlebadd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                 style="@style/title_right_button"
             android:gravity="center"
                android:text=""
                android:textColor="@color/TextColor"
                android:textSize="20sp" />

       </RelativeLayout>
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <EditText
            android:id="@+id/band_et_hwdtype"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_login_selector"
            android:ems="10"
            android:hint="输入设备型号"
            android:paddingBottom="10dp"
            android:textColorHint="@color/table_background"
            android:textSize="18sp" />
        <Spinner
             android:id="@+id/spinnerIdinfo_band"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true">
			</Spinner>
			
            <TextView
                android:id="@+id/txt_view_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/register1_radioGroup"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_white"
                android:paddingBottom="5dp"
                android:text="设备型号:"
                android:textColor="@color/qianlvse"
                android:textSize="20sp" />
             <EditText
                android:id="@+id/band_et_hwdname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/register1_radioGroup"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/band_et_hwdtype"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_login_selector"
                android:ems="10"
                android:hint="输入设备名称"
                android:paddingBottom="10dp"
                android:textColorHint="@color/table_background"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tall_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/band_et_hwdname"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/band_et_hwdtype"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_white"
                android:paddingBottom="5dp"
                android:text="设备名称:"
                android:textColor="@color/qianlvse"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/band_et_hwdid"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/register1_radioGroup"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/band_et_hwdname"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_login_selector"
                android:ems="10"
                android:hint="输入设备编号"
                android:paddingBottom="10dp"
                android:textColorHint="@color/transparent_bg"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/tall_id"
                android:layout_below="@+id/band_et_hwdname"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_white"
                android:paddingBottom="5dp"
                android:text="设备编号:"
                android:textColor="@color/qianlvse"
                android:textSize="20sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/band_et_hwdcommit"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/anniu"
        android:text="提交"
        android:textColor="@color/TextColor"
        android:textColorHint="@color/TextColor"
        android:textSize="25sp" />

</LinearLayout>
