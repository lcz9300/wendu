<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white" >
    <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/qianlvse" >

                <ImageView
                    android:id="@+id/netreg_imageview_goback"
                    style="@style/title_right_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/back_n" />

                <TextView
                    android:id="@+id/netreg_textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="用户注册"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
    
<ImageView
    android:id="@+id/netreg1_imageView1"
    android:layout_width="90dp"
    android:layout_height="108dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:background="@drawable/llogo" />
  
<EditText
    android:id="@+id/netreg1_et_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/netreg1_imageView1"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="80dp"
    android:drawableLeft="@drawable/ic_login_user"
    android:ems="10"
    android:hint="用户名/UserName"
    android:textColorHint="@color/qianlvse"
    android:textSize="18sp" />

<EditText
    android:id="@+id/netreg1_et_password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/netreg1_et_name"
    android:layout_alignLeft="@+id/netreg1_et_name"
    android:layout_alignRight="@+id/netreg1_et_name"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:drawableLeft="@drawable/ic_login_password"
    android:ems="10"
    android:hint="请输入密码/Password"
    android:password="true"
    android:textColorHint="@color/qianlvse"
    android:textSize="19sp" />

<EditText
    android:id="@+id/netreg1_et_password1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/netreg1_et_password"
    android:layout_alignLeft="@+id/netreg1_et_name"
    android:layout_alignRight="@+id/netreg1_et_name"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:drawableLeft="@drawable/ic_login_password"
    android:ems="10"
    android:hint="请确认密码/Password"
    android:password="true"
    android:textColorHint="@color/qianlvse"
    android:textSize="19sp" />

<Button
    android:id="@+id/netreg1_btnreg"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_below="@+id/netreg1_et_password"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="80dp"
    android:layout_marginLeft="80dp"
    android:background="@drawable/anniu"
    android:text="下一步"
    android:textColor="@color/TextColor"
    android:textColorHint="@color/TextColor"
    android:textSize="20sp" />
    
</RelativeLayout>
